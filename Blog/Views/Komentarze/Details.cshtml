@model Komentarz

@{
    ViewData["Title"] = "Dodaj komentarz";
}

<div class="row text">
    <div class="col-md-8 offset-2">
       
           <h6 class="text-center">Szczegóły dla @Model.Tresc</h6>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
              

                  

                    <div class="form-group">
                        <label asp-for="Tresc" class="control-label"></label>
                        <input asp-for="Tresc" class="form-control" readonly/>
