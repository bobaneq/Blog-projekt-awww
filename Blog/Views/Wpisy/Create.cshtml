@model NewWpisVM

@{

    ViewData["Title"] = "Dodaj nowy Post";

}


<div class="row">

    <div class="col-md-8 offset-2">
        <p>
            <h4>Dodaj nowy Post</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">

                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        @*lewa kolumna*@
                        <div class="col-md-6">

                            <div class="form-group">
                                <label asp-for="Tytul" class="control-lable"></label>
                                <input asp-for="Tytul" class="form-control" />
                                <span aps-validation-for="Tytul" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label asp-for="Zawartosc" class="control-lable"></label>
                                <textarea asp-for="Zawartosc" class="form-control"></textarea>
                                <span aps-validation-for="Zawartosc" class="text-danger"></span>
                            </div>
                        </div>
                        @*prawa kolumna*@
                        <div class="col-md-6">


                            <div class="form-check">
                                <input asp-for="KomentarzeZablokowane" class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                <label asp-for="KomentarzeZablokowane" class="form-check-label" for="flexCheckDefault">
                                    Zablokuj komentarze
                                </label>
                                <span aps-validation-for="KomentarzeZablokowane" class="text-danger"></span>
                            </div>


                            <div class="form-group">
                                <label asp-for="DataDodania" class="control-lable"></label>
                                <input asp-for="DataDodania" class="form-control" />
                                <span aps-validation-for="DataDodania" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="TagiIds" class="control-lable"></label>
                                <input asp-for="TagiIds" class="form-control" multiple />
                                <span aps-validation-for="TagiIds" class="text-danger"></span>
                            </div>
                        </div>

                    </div>


                    <div class="form-group">
                        <input type="submit" value="Dodaj" class="btn btn-outline-success float-right"/>
                        <a class="btn btn-outline-secondary" asp-action="Index">Wszystkie posty</a>
                    </div>



                </form>
            </div>
        </div>



    </div>
</div>
