@model IEnumerable<Tag>

@{
    ViewData["Title"] = "Lista dostępnych tagow";
}



<div class="row">
    <div class=col-md-8 offset-md-2>

        <table class="table">
           <thead>

             <tr class="text-center"> 
                <th>@Html.DisplayNameFor(model => model.Nazwa) </th>
            </tr>
           
          </thead>
        
          <tbody>
              @foreach (var item in Model)
             {
                <tr>
                    <td class="align-middle"> 
                        @Html.DisplayFor(modelItem => item.Nazwa)
                    </td>
                    <td class="align-middle"> 
                        <a class="btn btn-outline-primary"  asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square">Edycja</i></a> 
                        <a class="btn btn-outline-info"  asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye">Szczegóły</i></a> 
                        <a class="btn btn-outline-danger"  asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash">Kasuj</i></a> 
                    </td>


                </tr>
             }

          </tbody>   


        </table>


    </div>

</div>

@await Html.PartialAsync("_CreateItem", "Tagi");
