@model IEnumerable<Tag>

@{
    ViewData["Title"] = "Lista dostępnych tagow";
}



<div class="row">
    <div class=col-md-8 offset-md-2>

        <table class="table">
           <thead>

             <tr class="text-center"> 
                <th>@Html.DisplayNameFor(model => model.Nazwa) </th>
            </tr>
           
          </thead>
        
          <tbody>
              @foreach (var item in Model)
             {
                <tr>
                    <td class="align-middle"> 
                        @Html.DisplayFor(modelItem => item.Nazwa)
                    </td>
                    <td class="align-middle"> 
                        <a class="btn btn-outline-primary"><i class="bi bi-pencil-square">Edit</i></a> |
                        <a class="btn btn-outline-info"><i class="bi bi-eye">Details</i></a> |
                        <a class="btn btn-outline-danger"><i class="bi bi-trash">Delete</i></a> 
                    </td>


                </tr>
             }

          </tbody>   


        </table>


    </div>

</div>

<dvi style="position:fixed; right: 25px; bottom:80px; " class="text-white">
    <a asp-controller="Tagi" asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Dodaj </a>

</dvi>
