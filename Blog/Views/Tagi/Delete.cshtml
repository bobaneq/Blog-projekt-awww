@model Tag

@{
    ViewData["Title"] = "Usuń Tag";
}

<div class="row text">
    <div class="col-md-8 offset-2">
       
           <h6 class="text-center">Usuwanie tagu @Model.Nazwa</h6>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
              

                  

                    <div class="form-group">
                        <label asp-for="Nazwa" class="control-label"></label>
                        <input asp-for="Nazwa" class="form-control" readonly/>
                        <span asp-validation-for="Nazwa" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Id"/>
                            <input type="submit" value="Potwierdź" class="btn btn-danger float-right"/>
                        </form>


                       
                        <a class="btn btn-outline-secondary" asp-action="Index">Wszystkie Tagi</a>
                    </div>
                

            </div>
        </div>
    </div>
</div>

