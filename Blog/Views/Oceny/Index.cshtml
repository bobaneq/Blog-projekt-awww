@model IEnumerable<Ocena>

@{
    ViewData["Title"] = "Lista ocen";
}



<div class="row">
    <div class=col-md-8 offset-md-2>

        <table class="table">
           <thead>

             <tr class="text-center ">
                <th>@Html.DisplayNameFor(model => model.Id) </th>
             
            </tr>
           
          </thead>
        
          <tbody>
              @foreach (var item in Model)
             {
                <tr>
                    <td class=" "> 
                        @Html.DisplayFor(modelItem => item.Id)

                    </td>
                    <td class="align-middle"> 
                        <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square">Edycja</i></a> |
                        <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye">Szczegóły</i></a> |
                        <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash">Delete</i></a> 
                    </td>


                </tr>
             }

          </tbody>   


        </table>


    </div>

</div>

<dvi style="position:fixed; right: 25px; bottom:80px; " class="text-white">
    <a asp-controller="Oceny" asp-action="Create" class="btn btn-success"> <i class="bi bi-plus-circle"></i> Dodaj </a>

</dvi>